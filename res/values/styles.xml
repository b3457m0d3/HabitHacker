<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
		<item name="android:actionBarStyle">@style/habitHackerActionBarStyle</item>
    </style>
    <!-- Styles related to the actionbar -->
    <style name="habitHackerActionBarStyle" parent="android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#5474AB</item>
        <item name="android:displayOptions">showTitle</item>
        <item name="android:titleTextStyle">@style/habitHackerActionBarText</item>
    </style>

    <style name="habitHackerActionBarText" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">#FFF6F2</item>
    </style>
    
    	    
    <style name="aspirationRow">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">#666666</item>
        <item name="android:padding">20dip</item>
    </style>
    
    <style name="aspirationHeader">
        <item name="android:padding">30dip</item>
    </style>
    
    <style name="aspirationPage">
        <item name="android:background">#FFF6F2</item>
    </style>
</resources>

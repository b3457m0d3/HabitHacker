<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
		<item name="android:actionBarStyle">@style/habitHackerActionBarStyle</item>
    </style>
    <!-- Styles related to the actionbar -->
    <style name="habitHackerActionBarStyle" parent="android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#5474AB</item>
        <item name="android:displayOptions">showTitle</item>
        <item name="android:titleTextStyle">@style/habitHackerActionBarText</item>
    </style>

    <style name="habitHackerActionBarText" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">#FFF6F2</item>
    </style>
        
   	<!--  Styles for the ShowAspiration Page -->
    <style name="aspirationHeader">
        <item name="android:padding">20dip</item>
    </style>
 
    <style name="h1">
        <item name="android:textSize">22sp</item>
        <item name="android:textColorPrimary">#383838</item>
        <item name="android:paddingBottom">10dip</item>
    </style>
    
    <style name="h2">
        <item name="android:textColor">#383838</item>
        <item name="android:textSize">18sp</item>
    </style>
    
    <style name="h3">
		<item name="android:textColor">#383838</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="h4">
        <item name="android:textColor">#9C9C9C</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingLeft">2sp</item>
    </style>
    
    <style name="pageWrapper">
        <item name="android:background">#FFF6F2</item>
    </style>
    
    <style name="rowStyle">
        <item name="android:padding">18dp</item>
    </style>
            
    <style name="confirmButton">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#5474AB</item>
        <item name="android:background">@drawable/confirm_button</item>
    </style>
    
    <style name="cancelButton">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#5474AB</item>
        <item name="android:background">@drawable/cancel_button</item>
    </style>
</resources>
